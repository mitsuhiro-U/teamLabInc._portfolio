<div class="container">

  <h2>ユーザー情報編集</h2>
  <p class="text-success"><%= flash[:notice] %></p>
  <p class="text-danger"><%= flash[:alert] %></p>

  <%= form_with model: @user, url: users_update_path, local: true do |f| %>

    <div class="row mt-5">
      <div class="col-sm-3">
        <%= f.label :nickname, "ニックネーム" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :nickname %>
      </div>
    </div>

     <div class="row mt-3">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= f.submit "更新する" %>
      </div>
    </div>

  <% end %>

</div>