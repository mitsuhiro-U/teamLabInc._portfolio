
<div class="container">

  <h2>マイページ</h2>
  
  <p class="text-success"><%= flash[:notice] %></p>
  
  <div class="row mt-5">
    <div class="col-sm-3">
      <p>ニックネーム</p>
    </div>
    <div class="col-sm-3">
      <%= current_user.nickname %>
    </div>
    <div class="col-sm-3">
      <%= link_to "ニックネームの変更", users_edit_path %>
    </div>
  </div>

  <div class="space"></div>

  <h4>過去の投稿</h4>

  <table class="table">
    <tr>
      <th>タイトル</th>
      <th>山の名称</th>
    </tr>

    <% @reports.each do |report|%>
      <tr>
        <td><%= link_to "#{report.title}",report_path(report.id) %></td>
        <td><%= report.mountain_name %></td>
      </tr>
    <% end %>

  </table>

  </div>

</div>