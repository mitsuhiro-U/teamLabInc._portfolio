
<div class="container">

  <h2>マイページ</h2>

  <p class="text-success"><%= flash[:notice] %></p>

  <div class="row mt-5">
    <div class="col-sm-3">
      <p>ニックネーム</p>
    </div>
    <div class="col-sm-3">
      <%= current_user.nickname %>
    </div>
    <div class="col-sm-3">
      <%= link_to "ニックネームの変更", users_edit_path %>
    </div>
  </div>

  <div class="space"></div>

  <h4>過去の投稿</h4>

  <table class="table">
    <tr>
      <th>タイトル</th>
      <th>山の名称</th>
      <th></th>
      <th></th>
    </tr>

    <% @reports.each do |report|%>
      <tr>
        <td><%= link_to "#{report.title}",report_path(report.id) %></td>
        <td><%= report.mountain_name %></td>
        <td><%= link_to "編集する", edit_report_path(report.id), class: "btn btn-sm btn-success" %></td>
        <td><%= link_to "削除する", report_path(report.id), method: :delete, data: {confirm: "削除したデータは復旧出来ません。本当に削除しますか？"}, class: "btn btn-sm btn-danger"  %></td>
      </tr>
    <% end %>

  </table>

</div>