<div class="container">

  <h2>新規会員登録</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row mt-5">
      <div class="col-sm-3">
        <%= f.label :nickname, "ニックネーム" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :nickname, placeholder: "ニックネームを入力" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-sm-9">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレスを入力", size: 60 %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :password, "パスワード" %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上入力してください。)</em>
        <% end %><br />
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <%= f.label :password_confirmation, "パスワード確認用" %>
      </div>
      <div class="col-sm-9">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= f.submit "新規会員登録" %>
      </div>
    </div>
  <% end %>

</div>
