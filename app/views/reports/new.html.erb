
<div class="container">
  <h2>新規レポート投稿</h2>
   <%= form_with model: @user, url: users_update_path, local: true do |f| %>

    <div class="row mt-5">
      <div class="col-sm-3">
        <%= f.label :nickname, "ニックネーム" %>
      </div>
      <div class="col-sm-9">
        <%= f.text_field :nickname %>
      </div>
    </div>

     <div class="row mt-3">
      <div class="col-sm-3"></div>
      <div class="col-sm-9">
        <%= f.submit "更新する" %>
      </div>
    </div>

  <% end %>
  
</div>