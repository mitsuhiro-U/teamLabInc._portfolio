<div class="container">

  <h2>レポート</h2>

  <div class="row mt-5">
      <div class="col-sm-3">
        <p>タイトル</p>
      </div>
      <div class="col-sm-9">
        <%= @report.title %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
       <p>山の名称</p>
      </div>
      <div class="col-sm-9">
        <%=@report.mountain_name %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <p>標高</p>
      </div>
      <div class="col-sm-9">
        <%= @report.elevation %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <p>歩行時間</p>
      </div>
      <div class="col-sm-9">
        <%= @report.walking_time %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <p>難易度</p>
      </div>
      <div class="col-sm-9">
         <%= @report.difficulty %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-sm-3">
        <p>コメント</p>
      </div>
      <div class="col-sm-9">
        <%= @report.comment %>
      </div>
    </div>

</div>